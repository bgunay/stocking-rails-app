  <h1>Stocking</h1>
  <%= form_tag root_path, :method => 'post' do %>
    <%= text_field_tag 'ticker', nil, placeholder: "Enter Ticker Symbol", size: 50 %>
    <%= submit_tag "Lookup" %>
  <% end %>

  <br>
  <% if @stock %>
    <%= @stock.company_name %><br>
    $<%= @stock.latest_price %>
  <% elsif @nothing %>
    <%= @nothing %>
  <% end %>

<% if @error %>
  <div class="alert alert-danger" role="alert">
    <%= @error %>
  </div>
<% end %>